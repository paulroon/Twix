{
    "name": "happycode/twix",
    "description": "A micro PHP framework",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Twix\\": "src/",
            "Twix\\Test\\": "tests/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "authors": [
        {
            "name": "Paul Rooney",
            "email": "paul@happycoder.co.uk"
        }
